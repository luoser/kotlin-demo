<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/emoji"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/speaker_name"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/speaker_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/speakers_container"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceLarge" />

    <LinearLayout
        android:id="@+id/speakers_container"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/lisa"
            style="@style/SpeakerImageView"
            android:contentDescription="@null"
            android:src="@mipmap/dancer" />

        <ImageButton
            android:id="@+id/izzy"
            style="@style/SpeakerImageView"
            android:contentDescription="@null"
            android:src="@mipmap/sleuth_or_spy" />

        <ImageButton
            android:id="@+id/kevin"
            style="@style/SpeakerImageView"
            android:contentDescription="@null"
            android:src="@mipmap/thinking_face" />
    </LinearLayout>

</RelativeLayout>